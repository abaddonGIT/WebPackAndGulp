  "author": {
    "name": "AbaddonGIT",
    "email": "abaddongit@gmail.com",
    "url": "https://github.com/abaddonGIT"
  },
  "license": "MIT",
  "scripts": {
    "demo": "cross-env NODE_ENV=production DEMO=demo npm run build",
    "start": "nodemon --watch src/js/vendors/pages.js --exec npm run dev",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --config webpack.dev.babel.js --env development",
    "build": "cross-env NODE_ENV=production webpack --config webpack.prod.babel.js --optimize-minimize -p --profile --display-modules && gulp production"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.2",
    "babel-core": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-plugin-dynamic-import-webpack": "1.0.1",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "bemto.pug": "^2.1.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.5",
    "css-loader": "0.28.7",
    "extract-text-webpack-plugin": "3.0.1",
    "circular-dependency-plugin": "4.2.1",
    "uglifyjs-webpack-plugin": "1.0.0-beta.3",
    "file-loader": "latest",
    "gulp": "^3.9.1",
    "gulp-changed": "^1.3.2",
    "gulp-cheerio": "^0.6.2",
    "gulp-favicons": "^2.2.7",
    "gulp-file": "^0.3.0",
    "gulp-imagemin": "^3.1.1",
    "gulp-replace": "^0.5.4",
    "gulp-svg-sprite": "^1.3.6",
    "gulp-svgmin": "^1.2.3",
    "gulp-util": "^3.0.8",
    "gulp.spritesmith": "6.5.1",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "less": "^2.7.2",
    "less-loader": "^4.0.5",
    "lodash": "^4.17.4",
    "nodemon": "1.12.1",
    "postcss-import": "^11.0.0",
    "postcss-loader": "2.0.6",
    "pug-html-loader": "^1.1.4",
    "require-dir": "^0.3.1",
    "run-sequence": "latest",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "3.6.0",
    "webpack-dev-server": "2.7.1",
    "webpack-stream": "4.0.0"
  },
  "dependencies": {
    "es6-promise": "^3.1.2",
    "isomorphic-fetch": "^2.2.1",
    "jquery": "^3.1.1",
    "normalize.css": "^5.0.0",
    "svg4everybody": "latest"
  },
  "babel": {
    "presets": [
      [
        "latest",
        {
          "es2015": {
            "modules": false
          }
        }
      ],
      "es2015",
      "stage-0"
    ],
    "env": {
      "production": {
        "only": [
          "src"
        ],
        "plugins": [
          "transform-runtime",
          "dynamic-import-webpack"
        ]
      },
      "development": {},
      "test": {}
    }
  }
}